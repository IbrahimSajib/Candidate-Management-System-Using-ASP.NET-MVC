@model Candidate_Management_System.Models.Candidate

@{
    ViewBag.Title = "Delete";
}

<div class="card row col-lg-8 mx-auto">
    <h1 class=" card-header alert alert-danger">Are you sure you want to delete this?</h1>
    <div class="card-body mx-4">
        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.CandidateName) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.CandidateName)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Phone) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.Phone)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.DateOfBirth) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.DateOfBirth)
            </div>
        </div>



        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Image) :</b>
            </div>
            <div class="col-5">
                <img src="@Model.Image" alt="Image" width="100" />
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>Selected Skill :</b>
            </div>
            <div class="col-5">
                <ul>
                    @foreach (var item in Model.CandidateSkills)
                    {
                        <li>@item.Skill.SkillName</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Fresher) :</b>
            </div>
            <div class="col-5">
                @(Model.Fresher==true?"Yes":"No")
            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="offset-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("Index")" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>