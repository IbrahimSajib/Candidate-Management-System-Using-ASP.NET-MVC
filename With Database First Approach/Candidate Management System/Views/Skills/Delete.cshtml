@model Candidate_Management_System.Models.Skill

@{
    ViewBag.Title = "Delete";
}
<div class="card row col-lg-8 mx-auto">
    <h3 class=" card-header alert alert-danger">Are you sure you want to delete this?</h3>
    <div class="card-body">
        <p m-10> <span class="fw-bold">@Html.DisplayNameFor(x => x.SkillName) : </span> @Html.DisplayFor(x => x.SkillName)</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
            </div>
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("Index")" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>
