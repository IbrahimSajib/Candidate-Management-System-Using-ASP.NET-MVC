@model Candidate_Management_System.Models.Skill

@{
    ViewBag.Title = "Create";
}
<div class="card my-2 row col-lg-8 mx-auto">
    <div class="card-header">
        <h3>Add New Skill</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
      
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row mb-2">
                    <div class="col-2 fw-semibold">
                        @Html.LabelFor(x => x.SkillName,new { @class = "col-form-label"})
                    </div>
                    <div class="col-6">
                        @Html.EditorFor(x => x.SkillName, new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                    <div class="col-4">
                        @Html.ValidationMessageFor(x => x.SkillName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="d-flex offset-2 mt-2">
                    <input type="submit" value="Save Data" class="btn btn-success btn-sm" />
                </div>
            
        }
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("Index")" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>

</div>